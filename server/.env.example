# Environment Configuration
NODE_ENV=development
PORT=3001
DESKTOP_MODE=true

# Database
DATABASE_URL=sqlite://./shellcompany.db

# Session Secret - CHANGE THESE IN PRODUCTION!
SESSION_SECRET=change-this-to-a-secure-random-string-in-production
ENCRYPTION_KEY=change-this-to-32-char-key-production
JWT_SECRET=change-this-to-secure-jwt-secret-production

# GitHub OAuth (Create app at https://github.com/settings/developers)
GITHUB_CLIENT_ID=your-github-client-id-here
GITHUB_CLIENT_SECRET=your-github-client-secret-here
GITHUB_CALLBACK_URL=http://localhost:3001/auth/github/callback
# Personal Access Token for GitHub integration (optional)
# GITHUB_PAT=ghp_your-github-personal-access-token

# Google OAuth (Create app at https://console.cloud.google.com/)
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_CALLBACK_URL=http://localhost:3001/auth/google/callback
# Google API key for client-side services (optional)
# GOOGLE_API_KEY=your-google-api-key

# AI Model API Keys - Get from respective providers
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_PROJECT_API_KEY=sk-proj-your-openai-project-key-here
CLAUDE_API_KEY=sk-ant-your-claude-api-key-here
GEMINI_API_KEY=your-gemini-api-key-here
X_AI_API_KEY=xai-your-xai-api-key-here

# Google Cloud project metadata (for reference)
GOOGLE_PROJECT_ID=your-google-project-id
GOOGLE_PROJECT_NAME=ShellCompany
GOOGLE_OAUTH_APP_NAME=ShellCompany

# App URLs for OAuth configuration
GOOGLE_AUTHORIZED_REDIRECT=http://localhost:3001/auth/google/callback
GOOGLE_AUTHORIZED_JS_ORIGIN=http://localhost:3000

# Owner email for development
DEV_OWNER_EMAIL=admin@shellcompany.ai

# External Service URLs
FRONTEND_URL=http://localhost:3000
DASHBOARD_DOMAIN=localhost:3001

# API Keys for integrations (optional)
VERCEL_TOKEN=your-vercel-token-here
NETLIFY_AUTH_TOKEN=your-netlify-token-here
RENDER_API_KEY=your-render-api-key-here
AWS_REGION=us-east-1

# Webhook URLs (optional)
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/your/slack/webhook
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/your/discord/webhook

# Demo Mode (set to true to run without API keys)
# DEMO_MODE=true
